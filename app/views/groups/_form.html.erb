<%= form_with model: @group do |form| %>
  <div class="mb-3">
    <%= form.label :name, value: "Group name" %><br>
    <%= form.text_field :name, class: "form-control" %>
    <% if @group.errors.messages_for(:name).any? %>
      <div class="alert alert-danger">
        <% @group.errors.messages_for(:name).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="btn-group" role="group" aria-label="Opcje numerÃ³w">
    <%= form.submit "Add Group", class: "btn btn-primary" %>
    <%= link_to 'Cancel', "/", class: "btn btn-primary" %>
  </div>
<% end %>